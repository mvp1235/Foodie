<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:id="@+id/messageUserPhoto_id"
        android:src="@drawable/camera" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/messageContent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/messageUserPhoto_id"
        android:layout_toRightOf="@+id/messageUserPhoto_id"
        android:background="@drawable/left_message_background"
        android:maxWidth="250dp"
        android:padding="10dp"
        android:text="asdadasds dsadjasd asd jasdjas dkasdkl jasdasdkljasdklasj dkl jasdkl jkljasd kkaskdlj asdkljasdkas djkas djlasdjasdj jas" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/messageTime_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/sample_clock_time" />

</RelativeLayout>