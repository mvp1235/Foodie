<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationPhoto_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/camera" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/notificationUserName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notificationPhoto_id"
        android:layout_toEndOf="@+id/notificationPhoto_id"
        android:textStyle="bold"
        android:text="Huy Nguyen" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/commentMenu_id"
        style="?android:attr/actionOverflowButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/commentText_id"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notificationUserName_id"
        android:layout_toEndOf="@+id/notificationPhoto_id"
        android:layout_toRightOf="@+id/notificationPhoto_id"
        android:text="I'm definitely coming!!" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/commentTime_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/commentMenu_id"
        android:layout_toLeftOf="@+id/commentMenu_id"
        android:text="@string/sample_post_time" />

</RelativeLayout>