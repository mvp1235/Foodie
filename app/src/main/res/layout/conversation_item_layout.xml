<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:id="@+id/conversationUserPhoto_id"
        android:src="@drawable/camera" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/conversationUserName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/conversationUserPhoto_id"
        android:layout_toRightOf="@+id/conversationUserPhoto_id"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/lastMessageContent_id"
        android:layout_alignStart="@+id/lastMessageContent_id"
        android:text="@string/sample_user_name" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lastMessageContent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/conversationUserName_id"
        android:layout_toEndOf="@+id/conversationUserPhoto_id"
        android:layout_toRightOf="@+id/conversationUserPhoto_id"
        android:layout_alignParentBottom=""
        android:maxWidth="250dp"
        android:text="asdadasds dsadjasd asd jasdjas dkasdk asdasdl" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lastMessageTime_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/sample_clock_time" />

</RelativeLayout>